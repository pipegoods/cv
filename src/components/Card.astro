---
interface Props {
  title: string;
  description?: string;
  href?: string;
}

const { title, description, href = '#' } = Astro.props;
---

<a
  href={href}
  target="_blank"
  rel="noopener noreferrer"
  class="block max-w-sm p-6 bg-white border border-gray-200 rounded-lg hover:bg-gray-100"
>
  <h5 class="mb-2 font-bold tracking-tight text-gray-900">
    {title}
  </h5>

  {description && <p class="text-sm text-gray-700">{description}</p>}

  <div class="mt-4">
    <slot />
  </div>
</a>
