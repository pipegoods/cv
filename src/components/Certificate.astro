---
import Card from './Card.astro';
import { RESUME } from '../data/resume';
import Chip from './Chip.astro';

const { certificates } = RESUME;
---

<section>
  <h2 class="font-bold text-xl mb-3">Certificados</h2>

  <div class="grid grid-cols-2 gap-4">
    {
      certificates.map(({ url, name, date, issuer }) => (
        <Card title={name} href={url}>
          <div class="flex flex-col">
            <p class="text-sm">{issuer}</p>
            <p>
              <Chip label={date} size="small" />
            </p>
          </div>
        </Card>
      ))
    }
  </div>
</section>
